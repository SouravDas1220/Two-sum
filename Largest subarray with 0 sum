class Solution{
    public:
    int maxLen(vector<int>&A, int n)
    {   
        unordered_map<int,int> mp;
        int mx=0;
        int tempmx=0;
        int sum=0;
        for(int i=0;i<n;i++){
            sum+=A[i];
            if(sum==0){
                mx=i+1;
            }
            else{
                if(mp.find(sum)!=mp.end()){
                    mx=max(mx,i-mp[sum]);
                }
                else mp[sum]=i;
            }
        }
        return mx;
        
    }
};
